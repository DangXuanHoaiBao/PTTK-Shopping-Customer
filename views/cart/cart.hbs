<section class="header_text sub">
    <img class="pageBanner" src="/images/pageBanner.png" alt="New products">
    <h4><span>Shopping Cart</span></h4>
</section>
<section class="main-content">
    <div class="row">
        <div class="span9">
            {{#if mess}}
                <div class="alert alert-danger">
                    {{mess}}
                </div>
            {{/if}}
            <h4 class="title"><span class="text"><strong>Your</strong> Cart</span></h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Remove</th>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each list_product}}
                        <tr>
                            <form action="/cart/product-cart-delete={{this.Id}}" method="POST">
                                <td><button class="fa fa-close fa-1x" type="submit"></button></td>
                            </form>
                            <form action="/cart/product-cart-update={{this.Id}}" method="POST">
                            <td><a href="/product/product-detail={{this._id}}"><img alt="" src="https://pttk-shopping-web-admin.herokuapp.com/images/{{this.Image}}"></a></td>
                            <td>{{this.Name}}</td>
                            <td><input type="text" class="input-mini" value="{{this.Amount}}" name="Amount"></td>
                            <td>${{this.Cost}}</td>
                            <td>${{this.SubTotal}}</td>
                            <td><input class="btn" type="submit" value="Update"></td>
                            </form>
                        </tr>
                    {{/each}}   
                </tbody>
            </table>
            <hr>
            <p class="cart-total right">
                <strong>Total No Vat</strong>:${{totalNoVat}}<br>
                <strong>VAT (10%)</strong>: $10<br>
                <strong>Total</strong>: ${{totalVat}}<br>
            </p>
            <hr />
            <p class="buttons center">
                <a href="/order/checkout" class="btn btn-inverse" type="submit" id="checkout">Checkout</a>
            </p>
        </div>
        <div class="span3 col">
            <div class="block">
                <ul class="nav nav-list">
                    <li class="nav-header">SUB CATEGORIES</li>
                    <li><a href="#">Nullam semper elementum</a></li>
                    <li class="active"><a href="#">Phasellus ultricies</a></li>
                    <li><a href="#">Donec laoreet dui</a></li>
